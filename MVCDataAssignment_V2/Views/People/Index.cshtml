

@model List<Person>
@{
    ViewData["Title"] = "People - Index";
}


<h1>People</h1>

<div class="container">
    <div class= "row">
        <div class= "col-sm">
            <a class="btn btn-outline-dark" asp-area="" asp-controller="People" asp-action="Create"  >Create person</a>
            
        </div>
       
        <div class= "col-sm">  </div>
        
        <div class= "col-sm">
            <form asp-action="Search" method="post">
                <input type="text"  value="" name="textin"/>
                <button type="submit" class="btn btn-outline-secondary">Search </button>
            </form>
        </div>
        
    </div>



<table>
    
    <thead>
        
         <partial name="ConstantHeaderPartialView"/>
            
        
    </thead>
    <tbody>
        @foreach (Person person in Model)
        {
            
                <partial name="_PersonPartialView" model="person"/>
            
        }

    </tbody>
       
</table>
</div>